<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit <%= blog.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Blog Title</label>
                    <input class="form-control" type="text" name="name" id="name" value="<%= blog.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="image" id="image" value="<%= blog.image %>" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= blog.location %>">
                </div>
                <div class="form-group">
                    <label for="description">Blog Content</label>
                    <textarea class="form-control" name="description" id="description" rows="3" value="<%= blog.description %>"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/blogs">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

